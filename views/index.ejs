<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>My Notes</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #eef2f7;
    }

    .note-card {
      transition: transform 0.2s ease-in-out, box-shadow 0.2s;
      border-left: 5px solid #0d6efd; /* Matches navbar primary color */
    }

    .note-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(13, 110, 253, 0.15);
    }

    .note-content {
      min-height: 90px;
    }

    .search-box {
      border-left: 5px solid #0d6efd;
    }

    .section-title {
      color: #0d6efd;
      font-weight: 600;
    }

    .note-badge {
      background-color: #e7f1ff;
      color: #0d6efd;
      padding: 3px 8px;
      border-radius: 6px;
      font-size: 12px;
    }
  </style>
</head>
<body>
<%- include('includes/navbar.ejs')%>
<div class="container mt-4">

  <form action="/notes/search" method="GET" 
        class="d-flex mb-4 shadow-sm p-3 bg-white rounded search-box">
    <input class="form-control me-2" type="search" name="q" 
           placeholder="Search notes by title or content...">
    <button class="btn btn-primary" type="submit">Search</button>
  </form>

  <h3 class="mb-3 section-title">All Notes</h3>

  <% if (!notes || notes.length === 0) { %>
    <div class="alert alert-warning text-center">
      No notes found. Click on "Create Note" to add one.
    </div>
  <% } else { %>

  <!-- Notes Grid -->
  <div class="row">
    <% notes.forEach(note => { %>
      <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
        <div class="card note-card shadow-sm h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h5 class="card-title text-primary mb-0"><%= note.title %></h5>
              <span class="note-badge">Note</span>
            </div>

            <p class="card-text note-content text-muted">
              <%= note.content %>
            </p>
          </div>

          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <small class="text-muted">
                <%if(note.createdAt!=note.updatedAt){%>
                    Updated:<%= note.updatedAt.toLocaleString()%>
                    Created:<%= note.createdAt.toLocaleString()%>
                <%}%>
                </small>
            <div class="d-flex gap-2">
              <a href="/notes/<%= note._id %>/edit" 
                 class="btn btn-sm btn-outline-primary">Edit</a>

              <form method="POST" action="/notes/<%= note._id %>?_method=DELETE">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
